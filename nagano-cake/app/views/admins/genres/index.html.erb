<h2> ジャンル一覧・追加</h2>
<%= form_for @genre, url: admins_genres_path do |f| %>

  <h4>ジャンル</h4>
  <%= f.text_field :name %>
  <%= f.select :validity ,[['有効',true],['無効',false]] %>
  <%= f.submit '追加' %>

<% end %>
<div class="row">
	<div class="col-xs-3">
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>ジャンル</th>
					<th>状態</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @genres.each do |genre| %>
				<tr>
					<th><%= genre.name %></th>
					<% if genre.validity == true %>
						<th>有効</th>
					<% else %>
						<th>無効</th>
					<% end %>
					<th><%= link_to "編集", edit_admins_genre_path(genre) %></th>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>