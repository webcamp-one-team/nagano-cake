<div id="wrapper">
  <%=flash[:success]%>
	<div class="row">
		<div class="col-xs-1"></div>
		<div class="col-xs-10">
			<h3 class="heading">マイページ</h3>
			<strong>登録情報</strong>
			<%= link_to "編集する" , edit_members_path, class:"btn btn-primary %>
			<%= link_to "パスワードを変更する", members_edit_pass_path, class:"btn btn-primary %>
        	<table class="table table-bordered" >
				<tr>
					<th ><%= "氏名" %></th>
					<td><%= current_member.last_name %><%= current_member.first_name %></td>
				</tr>
				<tr>
					<th><%= "カナ" %></th>
					<td><%= current_member.last_name_kana %><%= current_member.first_name_kana %></td>
				</tr>
				<tr>
					<th><%= "郵便番号" %></th>
					<td><%= current_member.postal_code %></td>
				</tr>
				<tr>
					<th><%= "住所" %></th>
					<td><%= current_member.address %></td>
				</tr>
				<tr>
					<th><%= "電話番号" %></th>
					<td><%= current_member.telephone_number %></td>
				</tr>
				<tr>
					<th><%= "メールアドレス" %></th>
					<td><%= current_member.email %></td>
				</tr>
			</table>
				<tr>
					<th><%="配送先" %><%= link_to "一覧を見る", addresses_path, class:"btn btn-primary %></th></br>
					<th><%="注文履歴" %><%= link_to "一覧を見る", orders_path, class:"btn btn-primary %></th>
				</tr>
		</div>
		<div class="col-xs-1"></div>
	</div>
</div>