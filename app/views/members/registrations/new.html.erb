<div class="container">
  <div class="row">
    <div class="col-xs-1"></div>
    <div class="col-xs-10">
      <h2>新規会員登録</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "members/shared/error_messages", resource: resource %>

           <div class="field">
            <%= f.label :名前 %>
            <%= f.label :"(姓)" %>
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>

            <%= f.label :"(名)" %>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
          </div>

           <div class="field">
            <%= f.label :フリガナ %>
            <%= f.label :"(セイ)" %>
            <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>

            <%= f.label :"(メイ)" %>
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
          </div>

         　<div class="field">
            <%= f.label :"郵便番号(ハイフンなし)" %>
            <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
          </div>

          <div class="field">
            <%= f.label :住所 %>
            <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
          </div>

          <div class="field">
            <%= f.label :電話番号 %>
            <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
          </div>

          <div class="field">
            <%= f.label :メールアドレス %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :"パスワード(6文字以上)" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :"パスワード(確認用)" %><br />
            <%= f.password_field :"password_confirmation", autocomplete: "new-password" %>
          </div>

          <div class="actions">
            <%= f.submit "新規登録" %>
          </div>
        <% end %>

        <%= render "members/shared/links" %>
<p><%="既に登録済の方"%></p>
<p><%=link_to "こちら", new_member_session_path%>からログインしてください。</p>
    </div>
    <div class="col-xs-1"></div>
  </div>
</div>
