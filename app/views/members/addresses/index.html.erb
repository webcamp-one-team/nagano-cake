<!--顧客側配送先一覧/登録-->
<div id="wrapper">
	<div class="row">
		<div class="col-xs-1"></div>
		<div class="col-xs-10">
			<!--登録フォーム-->
			<div class="address-form">
				<h3 class="heading">配送先登録/一覧</h3>
				<%= form_for(@address) do |f| %>
				<p>郵便番号（ハイフンなし）</p>
				<%= f.text_field :postal_code %>
				<p>住所</p>
				<%= f.text_field :address %>
				<p>宛名</p>
				<%= f.text_field :name %>
				<%= f.submit "登録する", class:"btn btn-default" %>
				<% end %>
			</div>
			<!--一覧画面-->
			<div class="address-index">
				<table class="table table-bordered">
					<tr>
						<th>郵便番号</th>
						<th>住所</th>
						<th>宛名</th>
						<th></th>
					</tr>
					<% @addresses.each do |address|  %>
					<tr>
						<td><%= address.postal_code %></td>
						<td><%= address.address %></td>
						<td><%= address.name %></td>
						<td>
							<%= link_to "編集する", edit_address_path(address.id), class:"btn btn-default" %>
							<%= link_to "削除する", address_path(address.id), method: :delete, class:"btn btn-danger" %>
						</td>
					</tr>
					<% end %>
				</table>
			</div>
		</div>
		<div class="col-xs-1"></div>
	</div>
</div>