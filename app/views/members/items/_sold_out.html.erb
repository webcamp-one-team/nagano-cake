<div class="list">
	<%= attachment_image_tag item, :img, format: 'jpeg', fallback: "no_image.jpg", size: "150x100" %>
	<p><%= item.name %><p>
	<p><%= price_include_tax(item.price) %></p>
	<% if member_signed_in? %>
		<% if item.liked_by?(current_member) %>
				<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
				<%= item.likes.count %>Likes
		<% else %>
				<i class="fa fa-heart" aria-hidden="true"></i>
				<%= item.likes.count %>Likes
		<% end %>
	<% else %>
		<i class="fa fa-heart"></i>
		<%= item.likes.count %>Likes
	<% end %>
	<p>ご好評につき完売です。</p>
</div>
