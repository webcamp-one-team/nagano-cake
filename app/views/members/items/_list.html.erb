<div class="list" style="height:200px; width:200px; margin:2px 5px; float:left;">
	<%= link_to item_path(item.id) do  %>
		<div class="row">
			<p><%= attachment_image_tag item, :img, format: 'jpeg', fallback: "no_image.jpg", size: "150x150" %></p>
			<p><%= item.name %><p>
			<p><%= price_include_tax(item.price) %></p>
		</div>
	<% end %>
</div>