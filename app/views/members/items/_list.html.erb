<div class="list" style="height:200px; width:200px; margin:2px 5px; float:left;">
	<%= link_to item_path(item.id) do  %>
			<p><%= attachment_image_tag item, :img, format: 'jpeg', fallback: "no_image.jpg", size: "150x150" %></p>
			<p><%= item.name %><p>
			<p><%= price_include_tax(item.price) %></p>
	<% end %>
	<% if member_signed_in? %>
		<% if item.liked_by?(current_member) %>
				<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
				<%= item.likes.count %>Likes
		<% else %>
				<i class="fa fa-heart" aria-hidden="true"></i>
				<%= item.likes.count %>Likes
		<% end %>
	<% else %>
		<i class="fa fa-heart"></i>
		<%= item.likes.count %>Likes
	<% end %>
</div>
