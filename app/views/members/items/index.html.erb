<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<!--ジャンル検索欄-->
			<div>ジャンル検索</div>
			<% @genres.each do |genre| %>
					<%= link_to genre.name, genre_path(genre.id)  %>
			<% end %>
		</div>
		<div class="col-xs-9">
			<!--商品一覧-->
			<h2>商品一覧</h2>
			<table>
				<% @items.each do |item| %>
					<%= render 'list', item: item %>
				<% end %>
			</table>
		</div>
	</div>
</div>