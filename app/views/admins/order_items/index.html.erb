<h2>注文履歴一覧</h2>
<div class="row">
	<div class="col-xs-10">
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>購入日時</th>
					<th>購入者</th>
					<th>注文個数</th>
					<th>注文ステータス</th>
				</tr>
			</thead>
			<tbody>
				<% @order_items.each do |order| %>
				<tr>
					<td><%= order.created_at %></td>
					<td><%= order.order_id.name %></td>
					<td><%= order.amount %></td>
					<td><%= order.making_status %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>