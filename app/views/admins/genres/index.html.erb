<div id="wrapper">
  <div class="row">
    <div class="col-xs-1"></div>
    <div class="col-xs-10">
      <h3 class="heading">ジャンル一覧・追加</h3>
      <br>
      <br>
      <br>
      <%= form_with model: @genre, url: admins_genres_path, local: true do |f| %>
      <strong>ジャンル</strong>
      <%= f.text_field :name %>
      <%= f.select :validity ,[['有効',true],['無効',false]] %>
      <%= f.submit '追加' %>
      <% end %>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th>状態</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <% if genre.validity == true %>
            <td>有効</td>
            <% else %>
            <td>無効</td>
            <% end %>
            <td><%= link_to "編集", edit_admins_genre_path(genre) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-xs-1"></div>
  </div>
</div>