<h4><strong>ジャンル一覧・追加</strong></h4>
<%= form_for @genre, url: admins_genres_path do |f| %>
<br>
<br>
<br>
<h4><strong>ジャンル</strong></h4>
<%= f.text_field :name %>
<%= f.select :validity ,[['有効',true],['無効',false]] %>
<%= f.submit '追加' %>

<% end %>
<div class="row">
  <div class="col-xs-3">
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th>状態</th>
          <td>
          </td>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <% if genre.validity == true %>
          <td>有効</td>
          <% else %>
          <td>無効</td>
          <% end %>
          <td><%= link_to "編集", edit_admins_genre_path(genre) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>