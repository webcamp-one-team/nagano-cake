<h4><strong>商品一覧</strong></h4>
<div align="right"><%= link_to image_tag("plus_icon.png",size: "30x30"), new_admins_item_path %></td>
<div class="row">
  <div class="col-xs-12">
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admins_item_path(item), class: "item_#{item.id}" %></td>
          <td><%= item.price %></td>
          <td><%= item.genre.name if item.genre.present? %></td>
          <% if item.is_active == true %>
          <td>販売中</td>
          <% else %>
          <td>売り切れ</td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>