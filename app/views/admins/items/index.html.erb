<h2>商品一覧</h2>
<div class="row">
	<div class="col-xs-10">
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>商品ID</th>
					<th>商品名</th>
					<th>税抜価格</th>
					<th>ジャンル</th>
					<th>ステータス</th>
				</tr>
			</thead>
			<tbody>
				<% @items.each do |item| %>
				<tr>
					<td></td>
					<td><%= link_to item.name, admins_item_path(item), class: "item_#{item.id}" %></td>
					<td><%= item.price %></td>
					<td><%= item.genre.name if item.genre.present? %></td>
					<td></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
