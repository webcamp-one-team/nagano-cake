<div id="wrapper">
    <div class="row">
	    <div class="col-xs-1"></div>
	    <div class="col-xs-10">
			<h3 class="heading">商品新規登録</strong></h4>
			<%= form_with model:@item, url: admins_items_path, local: true do |f| %>
				<div class="row">
				    <div class="col-sm-5">
				    	<div align="center">
				    	<%= attachment_image_tag @item, :img, class: "img-square", fallback: "no_image.jpg", size:"200x200" %>
				    	<%= f.attachment_field :img, placeholder: "商品画像", class: "image-prev" %>
				    	</div>
				    </div>
				    <div class="col-sm-7">
				    	商品名
				    	<%= f.text_field :name, class:"form-control", placeholder:"商品名" %>
				    	商品説明
				    	<%= f.text_area :detail, class:"form-control", placeholder:"商品説明" %>
				    	ジャンル
				    	<%= f.collection_select :genre_id, @genres, :id, :name %>
				    	<br>税抜価格
				    	<%= f.text_field :price, class:"form-control", placeholder:"税抜価格" %>円
				    </div>
				</div>
				<div align="right"><%= f.submit "新規登録" %></div>
			<% end %>
		</div>
		<div class="col-xs-1"></div>
	</div>
</div>