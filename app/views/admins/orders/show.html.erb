<h2>注文履歴詳細</h2>
<h6>購入者</h6><%= @order_item.order.name %>
<h6>配送先</h6><%= @order_item.order.address %>
<h6>支払方法</h6><%= @order_item.order.payment_method %>
<%= form_with(model:@order, local:true) do |f| %>
<h6>注文ステータス</h6><%= f.select :order_status, Order.order_statuses.keys, {prompt: '選択してください'}, class:" btn btn-info" %>
					<%= f.submit "更新" %>
<% end %>
<div class="row">
	<div class="col-xs-8">
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>商品名</th>
					<th>単価(税込)</th>
					<th>数量</th>
					<th>小計</th>
					<th>製作ステータス</th>
				</tr>
			</thead>
			<tbody>
				<% sum_all = 0 %>
				<% @order.order_items.each do |order_item| %>
				<tr>
					<td><%= order_item.item.name %></td>
					<td><%= price_include_tax(order_item.item.price) %></td>
					<td><%= order_item.amount %></td>
					<td><%= sum_item = price_include_tax(order_item.item.price).to_i * order_item.amount %>
						<% sum_all += sum_item.to_i %>
					</td>
					<td></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
<h4>商品合計</h4><%= sum_all %>
<h4>送料</h4><%= @order.deliver_charge %>
<h4>請求金額合計</h4><%= total_payment = sum_all + @order.deliver_charge %>