<header id="header">
  <div class="logo">
    <p class="navbar-brand"><%= image_tag 'store.jpeg' %><%= link_to "ながのCake", admins_path %><span>管理者画面</span></p>
  </div>
  <div class="info">
    <nav id="mainNav">
      <div class="panel">
        <ul class="nav navbar-nav navbar-right">
